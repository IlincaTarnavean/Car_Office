                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="Class"/>
                                            <Binding Path="Manufacturer"/>
                                            <Binding Path="Model"/>
                                            <Binding Path="Year"/>
                                            <Binding Path="Color"/>
                                        </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
